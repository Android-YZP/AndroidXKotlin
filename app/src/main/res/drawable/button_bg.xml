<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <!-- 定义当button 处于pressed 状态时的形态。-->

        <shape>

            <solid android:color="#e66c5f" />

            <corners android:radius="23dp" />


            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

        </shape>

    </item>

    <item android:state_pressed="false">

        <!-- 定义当button 处于pressed 状态时的形态。-->

        <shape>

            <solid android:color="#4282f4" />

            <corners android:radius="23dp" />


            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

        </shape>

    </item>
</selector>